include "transp.owli"
include "ke.owli"

def server() @ Server :
    Option (if sec(data) then Name(data) else Data<adv>) =
    call ke_Server();
    input i in
    corr_case k in
    corr_case data in
    adec(get(k), i)

def client(x : Name(data)) @ Client: Unit = 
    corr_case k in
    let o = call ke_Client() in
    case o 
     | None => ()
     | Some k => 
        let c =  aenc(k, x) in 
        output c to endpoint(Server)
